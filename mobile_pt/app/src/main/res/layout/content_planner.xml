<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".planner.PlannerActivity"
    tools:showIn="@layout/activity_planner">

    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="-37dp"
        tools:layout_editor_absoluteY="229dp" />
    <LinearLayout
        android:id="@+id/List_name_planner"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        >

        <Button
            android:id="@+id/BottomList_Diet_p"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bottomlist_shape"
            android:textSize="27sp"
            android:text="식단" />

        <Button
            android:id="@+id/BottomList_Planner_p"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:background="@drawable/bottomlist_shape"
            android:text="플래너"
            android:textSize="27sp" />

        <Button
            android:id="@+id/BottomList_Chat_p"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:background="@drawable/bottomlist_shape"
            android:textSize="27sp"
            android:text="대화" />

        <Button
            android:id="@+id/BottomList_Member_p"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:background="@drawable/bottomlist_shape"
            android:textSize="27sp"
            android:text="회원" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>